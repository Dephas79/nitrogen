% vim:ts=4 sw=4 et ft=erlang
{cover_enabled, true}.

{erl_opts, [
    debug_info
%    {i,"site/include"}
]}.

{pre_hooks, [
    {"(linux|darwin|solaris|bsd)", compile, "./do-plugins.escript; etc/assemble_config.escript etc etc/autogenerated.config.all"},
    {"win32", compile, "escript.exe do-plugins.escript & escript.exe etc/assemble_config.escript etc etc/autogenerated.config.all"}
]}.

{relx, [{release, {{{name}}, "0.0.1" }, [
            sasl,
            %% BACKEND_LOADERS,
            {sync, load},
            {{name}}
        ]},
        {sys_config, "etc/autogenerated.config.all"},
        {vm_args, "etc/vm.args"},
        {dev_mode, true},
        {mode, dev},
        {include_erts, {{include_erts}}},
        {extended_start_script, true},
        {overlay, [
            {copy, "priv", "priv"},
%%%% This next line should be uncommented if you've 
%            {copy, "site", "site"}
        ]}
       ]
}.


{shell, [
%     {apps, nitrogen},
%     {vm_args, "etc/vm.args"}
]}.

{plugins, [
    rebar3_run
]}.

{deps, [
    %% BACKEND_DEPS,
    {nitrogen_core, {git, "https://github.com/nitrogen/nitrogen_core", {branch, rebar3}}},
    sync
]}.
